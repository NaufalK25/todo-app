{
    "compilerOptions": {
        "lib": [
            "es2020",
            "es2021",
            "dom",
        ],
        "module": "Commonjs",
        "target": "es2022",
        "types": [
            "node",
        ],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types",
        ],
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts",
    ],
}
