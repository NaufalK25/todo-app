{
    "name": "todo-app",
    "version": "1.0.0",
    "description": "Simple Todo App build with Node.js and TypeScript",
    "main": "dist/app.js",
    "scripts": {
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-tw": "tailwindcss -i ./public/css/input.css -o ./dist/public/css/output.css",
        "watch-tw": "tailwindcss -i ./public/css/input.css -o ./dist/public/css/output.css --watch",
        "build": "npm run build-ts && npm run build-tw",
        "start": "npm run serve",
        "serve": "node dist/app.js",
        "dev": "tsnd --respawn --pretty --transpile-only app.ts",
        "lint": "eslint . --ext .ts",
        "ejs-lint": "npx ejs-lint ./src/views/**/*.ejs",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "todo",
        "node",
        "typescript"
    ],
    "author": "NaufalK25",
    "license": "",
    "dependencies": {
        "@sequelize/core": "^7.0.0-alpha.10",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.2",
        "express-ejs-layouts": "^2.5.1",
        "express-session": "^1.17.2",
        "express-validator": "^6.14.0",
        "method-override": "^3.0.0",
        "node": "^17.4.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.17.0",
        "sequelize-typescript": "^2.1.3",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@types/connect-flash": "^0.0.37",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/express-ejs-layouts": "^2.5.0",
        "@types/express-session": "^1.17.4",
        "@types/method-override": "^0.0.32",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.21",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "ejs-lint": "^1.2.1",
        "eslint": "^8.8.0",
        "morgan": "^1.10.0",
        "tailwindcss": "^3.0.19",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    }
}
